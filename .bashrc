export VISUAL=vim
export EDITOR="$VISUAL"

# Powerline
if [ -d "/usr/local/lib/python3.4/dist-packages/powerline" ]; then
	export POWERLINEDIR=/usr/local/lib/python3.4/dist-packages/powerline
	powerline-daemon -q
	. ${POWERLINEDIR}/bindings/bash/powerline.sh
fi
